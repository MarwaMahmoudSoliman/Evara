@model e_commerce.Web.Models.LoginUserViewModel

@{
    var returnUrl = Context.Request.Query["ReturnUrl"].ToString();
}

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Login";
}



<section class="login-register section--lg">
    <div class="login-register__container container grid">
        <div class="login">
            <h3 class="section__title">Login</h3>
            <form asp-action="Login" class="form grid">
                <div asp-validation-summary="All" class="text-danger"></div>

                <input asp-for="Email" class="form__input" placeholder="Your Email" />
                <span asp-validation-for="Email" class="text-danger"></span>

                <input asp-for="Password" class="form__input" placeholder="Your Password" />
                <!-- Hidden input to carry ReturnUrl -->
                <input type="hidden" name="returnUrl" value="@returnUrl" />              
                <span asp-validation-for="Password" class="text-danger"></span>

                <!-- 🔹 Forgot password link -->
                <div class="form__forgot-password">
                    <a href="@Url.Action("ForgotPassword", "Account")" class="link">Forgot your password?</a>
                </div>

                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="RememberMe" />
                        @Html.DisplayNameFor(model => model.RememberMe)
                    </label>
                </div>
             

                <div class="form__btn">
                    <button type="submit" class="btn">Login</button>
                </div>

            </form>

            <!-- 🔻 Added "Don't have an account?" -->
            <div class="login__header">
                <span>Don't have an account?</span>
                <a href="@Url.Action("Register", "Account")" class="link">Sign up</a>
            </div>

            <!-- 🔻 Divider -->
            <div class="or-divider">
                <span>OR</span>
            </div>

            <!-- 🔻 Social buttons -->
            <div class="social-buttons">
                <a href="@Url.Action("ExternalLogin", "Account", new { provider = "Google" })"
                   class="social-btn google">
                    <img src="~/image/google-icon.svg" alt="Google" />
                    Continue with Google
                </a>


                <a href="@Url.Action("ExternalLogin", "Account", new { provider = "Facebook" })"
                   class="social-btn facebook">
                    <img src="~/image/icon-facebook.svg" alt="Facebook" />
                    Continue with Facebook
                </a>

            </div>


        </div>
    </div>
</section>




                    <style>

                    .login-register {
    background: linear-gradient(to right, #f0f2f5, #d9e4f5);
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
}

.login-register__container {
    max-width: 400px;
    width: 100%;
}

.login-card {
    background-color: #fff;
    border-radius: 1rem;
    padding: 2rem;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
}

.section__title {
    text-align: center;
    font-size: 1.8rem;
    color: #333;
    margin-bottom: 1.5rem;
}

.form__input {
    width: 100%;
    padding: 0.75rem 1rem;
    margin-bottom: 1rem;
    border: 1px solid #ccc;
    border-radius: 0.5rem;
    transition: border-color 0.3s;
}

.form__input:focus {
    border-color: #3b82f6;
    outline: none;
}

.form__forgot-password {
    text-align: right;
    margin-bottom: 1rem;
}

.link {
    color: #3b82f6;
    text-decoration: none;
}

.link:hover {
    text-decoration: underline;
}

.form-check-group {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
}

.btn {
    width: 100%;
    padding: 0.75rem;
    background-color: #3b82f6;
    color: white;
    border: none;
    border-radius: 0.5rem;
    font-size: 1rem;
    cursor: pointer;
    transition: background-color 0.3s;
}

.btn:hover {
    background-color: #2563eb;
}

.login-footer {
    text-align: center;
    margin-top: 1.5rem;
}

.or-divider {
    text-align: center;
    margin: 2rem 0;
    position: relative;
}

.or-divider span {
    background-color: #fff;
    padding: 0 1rem;
    position: relative;
    z-index: 1;
}

.or-divider::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    height: 1px;
    background-color: #ccc;
    z-index: 0;
}

.social-buttons {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.social-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.75rem;
    border-radius: 0.5rem;
    font-weight: bold;
    color: #fff;
    text-decoration: none;
    transition: transform 0.2s;
}

.social-btn:hover {
    transform: translateY(-2px);
}

.social-btn.google {
    background-color: #ea4335;
}

.social-btn.facebook {
    background-color: #4267B2;
}
</style>